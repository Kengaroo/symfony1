{% extends 'base.html.twig' %}
{% block title %}Wild Series{% endblock %}
{% block body %}
    <div class="media">
        <img class="align-self-start mr-3" src="{{constant('App\\Controller\\ProgramController::PATH_POSTER')~program.poster}}" alt="{{ program.title }} poster">
        <div class="media-body">
            <h1 class="mt-0">{{ program.title }}</h1>
            <p>{{ program.synopsis }}</p>
            <p>Catégorie : {{ program.category.name }}</p>
            <h2>Saisons</h2>
            {% for season in program.seasons %}
                <p><a href="{{path('program_season_show', {'programId': program.id, 'seasonId': season.id})}}">{{ season.number }}. L'année {{season.year}}</a></p>
            {% endfor %}
        </div>
    </div>
    <div>
        <a href="{{ path('program_index') }}">
            Retour à la liste des programmes
        </a>
    </div>
    <div>
        <a href="{{ path('app_index') }}">
            Retour à l'accueil
        </a>
    </div>
{% endblock %}